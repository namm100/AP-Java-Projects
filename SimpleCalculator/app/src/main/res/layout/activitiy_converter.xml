        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="D"
        android:id="@+id/button21"
        android:layout_above="@+id/button15"
        android:layout_toRightOf="@+id/button14"
